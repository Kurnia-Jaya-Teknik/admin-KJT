            margin-top: 15px;
            font-size: 9pt;
            line-height: 1.5;
        }

        .notes .title-note {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .notes ol {
            margin-left: 20px;
            padding-left: 0;
        }

        .notes li {
            margin-bottom: 4px;
        }

        /* Pelimpahan Section */
        .delegation-section {
            margin: 10px 0;
            padding: 8px;
            border: 1px solid #ccc;
            background-color: #fafafa;
        }
